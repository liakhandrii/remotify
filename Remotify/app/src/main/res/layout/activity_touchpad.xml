<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Touchpad">

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:id="@+id/background"/>

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle"
        android:id="@+id/clickcircle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/rightclick"
        android:id="@+id/rightclick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_margin="10dp"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:background="@drawable/not_connected"
        android:id="@+id/connection_button"
        android:layout_alignTop="@+id/rightclick"
        android:layout_alignStart="@+id/rightclick"/>

</RelativeLayout>
